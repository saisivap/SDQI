<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Aminite</th>
      <th>Roomsofaminite</th>
      <th>From time</th>
      <th>To time</th>
      <th>Date of the day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.user %></td>
        <td><%= booking.aminite %></td>
        <td><%= booking.roomsofaminite %></td>
        <td><%= booking.from_time %></td>
        <td><%= booking.to_time %></td>
        <td><%= booking.date_of_the_day %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

