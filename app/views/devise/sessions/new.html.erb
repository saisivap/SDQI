<div class="container" >
  <div class="row" style="padding-top: 10%">
    <div class="col-lg-2 col-sm-1 col-md-0 "  ></div>
    <div class="col-lg-8 col-sm-10 col-md-12 col-xs-12" style="text-align: center;padding: 4%">
      <div class="row">
        <div class="col-lg-2 col-sm-1"></div>
        <div class="col-lg-8 col-sm-10" id="bg-login" style="border: 1px solid rgba(255,255,0,0.3);text-align: center;padding-top: 10%;padding-bottom: 5%;box-shadow: 1px 2px 20px 3px rgba(0,0,0,0.3)">
          <h1 style="font-weight: bold;letter-spacing: 3px">Welcome</h1>
          <div class="row" style="padding:4%">
            <div class="col-lg-12 col-sm-12" style="text-align:center">
              <%= image_tag "avatar/pic4.png",style:"width:100px;height:100px;background-color:white;box-shadow:1px 2px 20px black;"  %>
            </div>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field" style="padding: 2%">
              <!--          <%#= f.label :email %><br />-->
              <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email",class:"col-12",style:"width:80%;height:40px;border:1px solid rgba(0,0,0,0.2)" %>
            </div>

            <div class="field" style="padding: 2%">
              <!--          <%#= f.label :password %><br />-->
              <%= f.password_field :password, autocomplete: "current-password",placeholder:"Password",class:"col-12",style:"width:80%;height:40px;border:1px solid rgba(0,0,0,0.2)" %>
            </div>

            <%# if devise_mapping.rememberable? %>
            <!--          <div class="field">-->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
            <!--          </div>-->
            <%# end %>
            <div class="row" style="padding: 5%">
<!--              <div class="col-lg-12">-->
                <div class="col-lg-6 col-sm-6">
                  <div class="actions">
                    <%= f.submit "Log in" ,class:"btn btn-success",style:"width:80%;height:40px;"%>
                  </div>
                </div>
                <div class="col-lg-6 col-sm-6">
                  <div class="actions">
                    <%= link_to "Sign Up",new_user_registration_path  ,class:"btn btn-warning",style:"width:80%;height:40px;"%>
                  </div>
                </div>
<!--              </div>-->
            </div>

          <% end %>

          <%#= render "devise/shared/links" %>
        </div>
        <div class="col-lg-2 col-sm-1"></div>
      </div>


    </div>
    <div class="col-lg-2 col-sm-1 col-md-0"></div>
  </div>
</div>


