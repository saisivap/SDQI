<div class="container">
  <div class="row">
    <div class="col-lg-1 col-sm-1"></div>
    <div class="col-lg-10 col-sm-10">
      <div class="row" style="text-align: center;padding: 5%">



        <div class="col-lg-12" style="border: 1px solid rgba(0,0,0,0.1);padding-top: 5%;padding-bottom: 5%;box-shadow: 1px 20px 20px 3px rgba(0,0,0,0.2)" id="bg-login">
          <h2>Sign up</h2>
          <div class="row" style="padding:4%">
            <div class="col-lg-12 col-sm-12" style="text-align:center">
              <%= image_tag "avatar/pic4.png",style:"width:100px;height:100px;background-color:white;box-shadow:1px 2px 20px black;"  %>
            </div>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="row">
            <div class="col-lg-6 col-sm-6">
              <div class="field">
<!--                <%#= f.label :'First Name' %><br />-->
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "col-12",style:"width:80%;height:40px",placeholder:"First Name" %>
              </div>
              <div class="field">
<!--                <%#= f.label :'Last Name' %><br />-->
                <%= f.text_field :last_name,  autocomplete: "last_name" ,class: "col-12",style:"width:80%;height:40px",placeholder:"Last Name" %>
              </div>
              <div class="field" >
                <div class="dropdown">
                  <em ><%= f.label :'Block' %></em>
                  <%#= f.email_field :email,  autocomplete: "email" %>
                  <%#= f.select :block, options_for_select([['A'], ['B']]) ,class:"dropdown-item",style:"border:3px solid black;font-weight:bold;background:rgba(250,50,250,0.1)" %>
                  <%= select_tag :block, options_for_select([['A'], ['B']]) ,class:"dropdown-item",style:"border:1px solid rgba(0,0,0,0.3);font-weight:bold;background:rgba(0,0,0,0.1);width:80%;height:40px;margin-left:10%",placeholder:"block" %>
                </div>
              </div>
              <div class="field">
<!--                <%#= f.label :'Flat' %><br />-->
                <%= f.text_field :flate,  autocomplete: "flate",class: "col-12",style:"width:80%;height:40px",placeholder:"Flat"  %>
              </div>
              <div class="field">
<!--                <%#= f.label :'Mobile Number' %><br />-->
                <%= f.text_field :phone_number,  autocomplete: "phone_number",class: "col-12",style:"width:80%;height:40px",placeholder:"Phone Number"  %>
              </div>
            </div>
            <div class="col-lg-6 col-sm-6" >
              <div class="field">
                <%#= f.label :image,"Image" %>
                <%= f.file_field :image ,class:"btn btn-primary",style:"width:80%;height:40px"%>
              </div>


              <div class="field">
<!--                <%#= f.label :email %><br />-->
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-12",style:"width:80%;height:40px",placeholder:"Email"  %>
              </div>

              <div class="field">
                <%#= f.label :password %>
                <% if @minimum_password_length %>
                  <em style="color:red;font-weight: bold">(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",class: "col-12",style:"width:80%;height:40px",placeholder:"Password"  %>
              </div>

              <div class="field">
<!--                <%#= f.label :password_confirmation %><br />-->
                <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "col-12",style:"width:80%;height:40px",placeholder:"Password Conformation"  %>
              </div>

            </div>

<!--              <div class="row">-->
                <div class="col-lg-6 col-sm-6">
                  <div class="actions">
                    <%= f.submit "Sign up",class:"btn btn-success",style:"width:80%;height:40px" %>
                  </div>
                </div>
                <div class="col-lg-6 col-sm-6">
                  <div class="actions">
                    <%= link_to "Log in",new_user_session_path,class:"btn btn-warning",style:"width:80%;height:40px" %>
                  </div>
                </div>
<!--              </div>-->

            </div>

          <% end %>

          <%#= render "devise/shared/links" %>
        </div>

      </div>
    </div>
    <div class="col-lg-1 col-sm-1"></div>
  </div>
</div>





