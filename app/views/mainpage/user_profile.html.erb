<div class="container">
  <div class="row" style="text-align: center;padding-top:10% ">
    <div class="col-12-lg col-sm-12">
      <h3 style="font-weight:bold;color:rgba(0,0,0,0.7);background-color: rgba(135,206,235 ,0.5 ) ;text-align: center;padding: 2%;border: 5px solid rgba(0,0,0,0.3)"> Profile Of <%=@user.first_name+" "+@user.last_name %></h3>
    </div>

  </div>
  <div class="row">
    <div class="col-lg-1 col-sm-1"></div>
    <div class="col-lg-10 col-sm-10">
      <div class="row" style="padding-top:2% " >

        <div class="col-lg-6 col-sm-6">
          <%if @user.image.attached? %>
            <%= image_tag(@user.image,:class=> "rounded img-thumbnail",style: "width:100%,height:100%;text-align:center;padding:5%;border:3px solid rgba(100,0,0,0.3);") %>
          <%else %>
            <%= image_tag("avatar/profile2.png",:class=> "rounded img-thumbnail",style: "width:100%,height:100%;text-align:center;padding:5%;border:3px solid rgba(100,0,0,0.3);") %>
          <%end %>
        </div>
        <div class="col-lg-6 col-sm-6" style="text-align: left;border: 3px solid rgba(100,100,10,0.5);padding: 5%;border-radius: 5%">
          <div class="row">
            <div class="col-lg-12 col-sm-12">
<!--              <ul>-->
                <h4><span style="font-weight: bold">First Name: </span><%= @user.first_name %></h4>
                <h4><span style="font-weight: bold">Last Name: </span><%= @user.last_name %></h4>
                <h4><span style="font-weight: bold">Block: </span><%= @user.block %></h4>
                <h4><span style="font-weight: bold">Flat: </span><%= @user.flate %></h4>
<!--              </ul>-->

<!--            </div>-->
<!--            <div class="col-lg-6 col-sm-6">-->
<!--              <ui>-->
                <h4><span style="font-weight: bold">Phone Name: </span><%=@user.phone_number %></h4>
                <h4><span style="font-weight: bold">Email:</span><%=@user.email %></h4>
<!--              </ul>-->
              <div class="" style="padding-top: 1%">
                <%= link_to "Back",residents_path,class: "btn btn-warning",style: "width:100%" %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-1 col-sm-1"></div>
  </div>
</div>