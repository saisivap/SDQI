<div class="container">
  <div class="row">
    <div class="col-lg-1 col-sm-1"></div>
    <div class="col-lg-10 col-sm-10" style="padding: 2%">
      <div class="row" style="padding-top:2%">
        <div class="col-lg-12 col-sm-12" style="text-align:center">
          <%= image_tag "avatar/pic4.png",style:"width:100px;height:100px;background-color:white;box-shadow:1px 2px 20px black"  %>
        </div>
      </div>
      <div class="row" style="text-align: center">
        <div class="col-lg-12 col-sm-12">
          <h3 style="font-weight: bold;color:rgba(200,100,100,0.6);background-color: rgba(0,0,0,0.2);border-left:5px solid rgba(200,100,100,0.6);padding: 1%">Feedbacks </h3>
        </div>
      </div>
      <% @feedbacks.each do |feedback| %>
        <% c=Complaint.find(feedback.complaint_id) %>
<!--        <div class="row">-->
<!--          <div class="col-lg-12 col-sm-12">-->
<!--            <h3>Ticket ID :<%#= c.id %></h3>-->
<!--          </div>-->
<!--        </div>-->
        <div class="row" style="padding: 1%">
          <div class="col-lg-12 col-sm-12">
        <div class="row" style="padding: 2%;box-shadow:1px 3px 5px 1px rgba(200,200,0,0.2);border: 10px solid rgba(0,0,0,0.3)">
          <div class="col-lg-12 col-sm-12">
            <h6 > <spam style="background-color: rgba(0,0,0,0.8);color:white;padding: 1%;border: 4px solid rgba(255,255,255,0.4)">Ticket ID : <%= c.id %></spam></h6>
          </div>
          <div class="col-lg-6 col-sm-6" style="border: 0px solid black;padding: 2% ;text-align: center">
            <% if c.image.attached? %>
              <%= image_tag(c.image, :class => "img-thumbnail",style:"box-shadow:2px 3px 10px 3px rgba(200,0,0,0.2)") %>
            <%end %>
          </div>
          <div class="col-lg-6 col-sm-6">
           <h5>Description: <%= c.description %></h5>
            <h5>Block:  <%= c.block %></h5>
            <% if c.type_of_property=="Shared" %>
            <h5>Floor:  <%= c.floor %></h5>
              <%else %>
              <h5>Flat:  <%= c.floor %></h5>
              <%end %>
            <h5>Type Of Property:  <%= c.type_of_property %></h5>
            <div class="row" style="padding: 3%" >
<!--              <div class="col-lg-1 col-sm-1"></div>-->
              <div class="col-lg-12 col-sm-12" style="padding: 2%;border: 3px solid rgba(0,200,0,0.5);box-shadow: 0px 0px 3px 0px rgba(0,255,0,0.3)">
                <h6>Feedback: </h6>
                <h4><%= feedback.description %></h4></br>
                <p style="text-align: right">---feedback by <spam style="font-weight: bold;background-color: rgba(255,255,0,0.3);padding: 2px"><%= link_to User.find(feedback.user_id).first_name, profile_path(feedback.user_id)%></spam></p>
              </div>
<!--              <div class="col-lg-1 col-sm-1"></div>-->

            </div>
          </div>

        </div>
          </div>
        </div>
      <%end %>
    </div>
    <div class="col-lg-1 col-sm-1"></div>
  </div>
</div>

