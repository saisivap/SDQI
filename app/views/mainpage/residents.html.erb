<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  th {
    background-color: black;
    color: white;
  }
</style>
<!--<div class="container">-->
  <div class="row" style="padding-top:5% ">
    <div class="col-lg-1 col-sm-1"></div>
    <div class="col-lg-10 col-sm-10 col-xs-12">
      <table>
        <thead>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Block</th>
          <th>Flat</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>Role</th>
          <th>option</th>
          <th>option</th>
        </tr>
        </thead>
        <% @residents.each do |r| %>
          <tr>
            <td><%= r.id%></td>
            <td><%= r.first_name%></td>
            <td><%= r.last_name%></td>
            <td><%= r.block %></td>
            <td><%= r.flate%></td>
            <td><%=r.phone_number %></td>
            <td><%=r.email %></td>
            <td><%= r.role %></td>
            <% if r.role !="Admin" %>
            <td><%= link_to "Delete", deluser_path(r.id),class: "btn btn-danger"%></td>
            <td><%= link_to "View", profile_path(r.id),class: "btn btn-warning"%></td>
              <%else %>
              <td></td>
              <td></td>
              <%end %>
            <td></td>
          </tr>
        <% end %>
      </table>

    </div>
    <div class="col-lg-1 col-sm-1"></div>
  </div>
</div>
