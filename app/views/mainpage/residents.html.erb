<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  th {
    background-color: black;
    color: white;
  }
</style>
<!--<div class="container">-->
<div class="row" style="padding-top:2%">
  <div class="col-lg-12 col-sm-12" style="text-align:center">
    <%= image_tag "avatar/pic4.png",style:"width:100px;height:100px;background-color:white;box-shadow:1px 2px 20px black"  %>
  </div>
</div>
<div class="row" style="padding-top: 2%">
  <div class="col-lg-1 col-sm-1"></div>
  <div class="col-lg-4 col-sm-4 col-xs-4" style="padding: 1%">
    <%#= link_to 'Add To Shared Property', new_shared_path ,class: "btn btn-warning",style: "width:100%;color:white"%>

    <%= form_tag residents_path, method: :get do %>
      <%= text_field_tag 'term', params[:term], placeholder: "Search by Email,Name,Flat",style:"width:60%;height:40px;border-radius:5%;border:3px solid rgba(0,0,0,0.3)" %>
      <%= submit_tag 'Search!',class:"btn btn-warning" %>
    <% end %>

  </div>
  <div class="col-lg-3 col-sm-3" style="padding: 1%">
    <%= link_to 'Add Security', security_path ,class: "btn btn-info",style: "width:100%;color:white"%>
  </div>
  <div class="col-lg-3 col-sm-3" style="padding: 1%">
    <%= link_to 'Back', root_path ,class: "btn btn-dark",style: "width:100%;color:white"%>
  </div>
  <div class="col-lg-1 col-sm-1"></div>
</div>
  <div class="row" style="padding-top:2% ">
    <div class="col-lg-1 col-sm-1"></div>
    <div class="col-lg-10 col-sm-10 col-xs-12">
      <table>
        <thead>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Block</th>
          <th>Flat</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>Role</th>
          <th>option</th>
          <th>option</th>
        </tr>
        </thead>
        <% @residents.each do |r| %>
          <tr>
            <td><%= r.id%></td>
            <td><%= r.first_name%></td>
            <td><%= r.last_name%></td>
            <td><%= r.block %></td>
            <td><%= r.flate%></td>
            <td><%=r.phone_number %></td>
            <td><%=r.email %></td>
            <td><%= r.role %></td>
            <% if r.role !="Admin" %>
            <td><%= link_to "Delete", deluser_path(r.id),class: "btn btn-danger"%></td>
            <td><%= link_to "View", profile_path(r.id),class: "btn btn-warning"%></td>
              <%else %>
              <td></td>
              <td></td>
              <%end %>
            <td></td>
          </tr>
        <% end %>
      </table>

    </div>
    <div class="col-lg-1 col-sm-1">
      <%#= link_to "Add Security",security_path,class: "btn btn-warning" %>
    </div>
  </div>
</div>
