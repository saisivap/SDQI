<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even){background-color: #f2f2f2}

  #first th {
    background-color: deepskyblue;
    color: white;
    padding: 8px;
  }
  #second th {
    background-color: lightgreen;
    color: white;
    padding: 8px;
  }
</style>
<div class="container">
  <div class="row" style="padding:2%">
    <div class="col-lg-12 col-sm-12" style="text-align:center">
      <%= image_tag "avatar/pic4.png",style:"width:100px;height:100px;background-color:white;box-shadow:1px 2px 20px black"  %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-sm-12" style="text-align: center;padding: 2%">
      <h3 style="font-weight: bold;letter-spacing: 2px"><span style="background-color: rgba(0,0,0,0.3);color:white;padding: 1%;border-left:20px solid rgba(0,0,0,0.4);border-radius: 10px ">Maintenance</span></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4 col-sm-4"></div>
    <div class="col-lg-4 col-sm-4"></div>
    <div class="col-lg-4 col-sm-4" style="text-align:right ">
      <%= form_tag users_maintenance_path, method: :get do %>
        <%= text_field_tag 'term', params[:term], placeholder: "Search by Block,date(year-m-date)",style:"width:60%;height:40px;border-radius:5%;border:3px solid rgba(0,0,0,0.3)" %>
        <%= submit_tag 'Search!',class:"btn btn-warning" %>
      <% end %>
    </div>
  </div>
  <div class="row" style="padding-top: 1%">
  <div class="col-lg-6 col-sm-6" style="padding: 1%">
    <table>
      <tr class="row" >
        <td class="col-lg-12 col-sm-12" >
          <h4 style="font-weight: bold"><spam style="background-color: rgba(255,0,0,0.9);padding:5%;border-left:10px solid rgba(0,0,0,0.8);letter-spacing: 2px;color:white">Private</spam></h4>
        </td>
      </tr>

      <tr id="first">
        <th>S.No</th>
        <th>Maintain</th>
        <th>Block</th>
        <th>Flat</th>
        <th>Date</th>
      </tr>
      <%i=0 %>
      <% @private.each do |private| %>
        <%i=i+1 %>
        <tr>
          <td><%= i %></td>
          <td><%=private.type_of_service %></td>
          <td><%= private.block %></td>
          <td><%= private.flate %></td>
          <td><%= ((private.created_at).to_date).strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
    </table>
  </div>
  <div class="col-lg-6 col-sm-6" style="padding: 1%">

    <table>
      <tr class="row" >
        <td class="col-lg-12 col-sm-12" style="text-align: center">
          <h4 style="font-weight: bold"><spam style="background-color: purple;padding:5%;border-left:10px solid rgba(0,0,0,0.8);letter-spacing: 2px;color:white">Shared</spam></h4>
        </td>
      </tr>
      <tr id="second">
        <th>S.No</th>
        <th>Maintain</th>
        <th>Block</th>
        <th>Floor</th>
        <th>Date</th>
      </tr>
      <%i=0 %>
      <% @shared.each do |share| %>
        <%i=i+1 %>
        <tr>
          <td><%= i %></td>
          <td><%=share.type_of_service %></td>
          <td><%= share.block %></td>
          <td><%= share.floor %></td>
          <td><%= ((share.created_at).to_date).strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
    </table>
    <%#= form_tag users_maintenance_path, method: :get do %>
      <%#= text_field_tag 'term', params[:term], placeholder: "Search by Block,date",style:"width:60%;height:40px;border-radius:5%;border:3px solid rgba(0,0,0,0.3)" %>
      <%#= submit_tag 'Search!',class:"btn btn-warning" %>
    <%# end %>
  </div>
  </div>
</div>



